<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalmChartActivity">

    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALM CHART"
        android:gravity="center"
        android:layout_margin="16dp"/>


    <TextView
        android:id="@+id/calmChrtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Name"
        android:layout_below="@+id/activityTitle"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/calmChrtIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time to relax"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/activityTitle"
        android:layout_marginEnd="32dp"
        />


    <ScrollView
        android:layout_below="@+id/calmChrtName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listOfCalmChrtRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager"/>
    </ScrollView>


</RelativeLayout>