<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea_bg"
    tools:context=".SleepStoryReadActivity">

    <LinearLayout
        android:id="@+id/linearx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/teal_700"
            android:onClick="btnGoStoryAudio"
            android:text="Audio Story"
            android:textColor="@color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_100"
            android:text="Read Story"
            android:textColor="@color/white" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="409dp"
        android:layout_height="220dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearx">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/SleepStory1btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="SleepStory1btn"
                app:srcCompat="@drawable/fh11" />

            <ImageButton
                android:id="@+id/SleepStory2btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/SleepStory1btn"
                app:layout_constraintTop_toTopOf="@+id/SleepStory1btn"
                android:onClick="SleepStory2btn"
                app:srcCompat="@drawable/fh11" />

            <ImageButton
                android:id="@+id/SleepStory3btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/SleepStory2btn"
                app:layout_constraintTop_toTopOf="@+id/SleepStory2btn"
                android:onClick="SleepStory3btn"
                app:srcCompat="@drawable/fh11" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>